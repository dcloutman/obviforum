	<label for="login_form_username">Username</label>
	<input type="text" id="login_form_username" name="username" value="" />
	<label for="login_form_password">Password</label>
	<input type="password" id="login_form_password" name="password" value="" />
	<button type="submit">Login</button>
</form>

